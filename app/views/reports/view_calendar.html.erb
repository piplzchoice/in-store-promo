<h1 class="page-header">In Store Marketing Services Calendar</h1>

<div id="calendar-and-legend">
  <% if current_user.has_role?(:client) %>
  <div id="colour-legend" class="no-print">
      <div class="confirmed">Confirmed</div>
      <div class="reported">Reported</div>
      <div class="conducted">Invoiced</div>
      <div class="paid">Paid</div>
  </div>
  <% else %>
  <div id="colour-legend" class="no-print">
    <div class="confirmed" style="margin-left: 148px;margin-bottom: -20px;">Confirmed</div>
  </div>  
  <div id="colour-legend" class="no-print">
    <div class="tbs">TBS</div>
    <div class="scheduled">Scheduled</div>
    <div class="rejected">Rejected</div>
    <div class="inventory-confirmed">Inventory</div>
    <div class="reported">Reported</div>
    <div class="conducted">Invoiced</div>
    <div class="paid">Paid</div>
    <div class="ba-paid">BA Paid</div>
    <div class="cancelled">Cancelled</div>
  </div>
  <div id="colour-legend" class="no-print" style="margin-left: 148px;margin-top: -20px;">
    <div class="unrespond">Unrespond</div>
  </div>
  <% end %>
  <div id="calendar" data-url="<%= view_calendar_reports_path({format: :json, status: params[:status], assigned_to: params[:assigned_to], client_name: params[:client_name]}) %>"></div>
</div>
