            <td id="product-three-end" data-id="three">
              <%= @report.product_three_end %>
            </td>
            <td id="product-three-sold" data-id="three">
              <%= @report.product_three_sold %>
            </td>
          </tr>
          <tr>
            <td>Product 4</td>
            <td id="product-four" data-id="four">
