              <th><span class="report-title">Sample</span></th>            
            <th><span class="report-title">Beginning</span></th>
            <th><span class="report-title">End</span></th>
            <th><span class="report-title">Sold</span></th>
          </tr>
        </thead>
        <tbody>  
          <tr>
            <td>Product 1</td>
            <td id="product-one" data-id="one">
              <%= @report.product_one %>
            </td>
