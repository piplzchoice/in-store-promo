<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin", role: "form", method: :put }) do |f| %>
    <h2 class="form-signin-heading">Reset your password</h2>

    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, {autofocus: true, autocomplete: "off", class: "form-control", placeholder: "New Password", required: true} %>
    <%= f.password_field :password_confirmation, {autocomplete: "off", class: "form-control", placeholder: "Confirm new password", required: true} %>


    <%= f.submit "Reset my password", {class: "btn btn-lg btn-primary btn-block"} %>    
  <% end %>
</div>