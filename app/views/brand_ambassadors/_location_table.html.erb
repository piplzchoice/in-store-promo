<table class="table table-striped">
<thead>
  <tr>
    <th>
    <th>ID</th>
    <th>Name</th>
  </tr>
</thead>
<tbody>
  <% @locations.each_with_index do |location, i|  %>
  <tr>
    <td>
      <%= 
        check_box_tag("location_#{location.id}", location.id, (@location_ids.empty? ? false : (@location_ids.include?(location.id.to_s) ? true : false)), {class: 'locations-checkbox'})
      %>
    </td>      
    <td><%= location.id %></td>
    <td><%= location.name %></td>
  </tr>
  <% end %>
</tbody>
</table>
<%= will_paginate @locations, renderer: BootstrapPagination::Rails %>