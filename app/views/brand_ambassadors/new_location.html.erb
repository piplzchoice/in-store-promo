<h1 class="page-header">Add Locations for <%= @brand_ambassador.name %></h1>

<div class="row" style="margin-bottom: 30px;">
  <div class="col-md-3">
    <%= form_tag(new_location_brand_ambassador_path(id: @brand_ambassador.id), method: :get, remote: true, id: "filter-data") do %>
      <div class="form-group">
        <label class="control-label">Name</label>
        <%= text_field_tag("location_name", "", {class: "form-control filter-params"}) %>
      </div>    
      <%= hidden_field_tag(:page, 1) %>
      <%= hidden_field_tag(:location_ids, @location_ids.join(",")) %>      
      <%= hidden_field_tag(:original_location_ids, @location_ids.join(",")) %>      
      <%= submit_tag("Filter", class: "btn btn-default filter-location", id: "filter-submit") %>
    <% end %>
  </div>
</div>

<hr>

<div class="table-responsive">
  <%= render "location_table" %>
</div>


<div class="link-new-btn">    
  <%= link_to("Save Locations", "#", {id: "save-ba-location" ,class: "btn btn-primary"}) %>
</div>  
<br /><br />

<%= form_tag(create_location_brand_ambassador_path(id: @brand_ambassador.id), method: :post, id: "create-ba-location") do %>
  <%= hidden_field_tag(:location_ids, nil, {id: "location_ids_save"}) %>
<% end %>