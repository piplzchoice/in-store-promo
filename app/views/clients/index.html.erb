<h1 class="page-header">Clients</h1>
<div class="link-new-btn"><%= link_to("New Client", new_client_path, {class: "btn btn-primary", role: "button"}) %></div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>No</th>
        <th>Company Name</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each_with_index do |client, i|  %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= client.company_name %></td>
        <td><%= client.name %></td>
        <td>
          <% if client.is_active %>
            <%= link_to "Display", client_path(client) %> || 
            <%= link_to "Edit", edit_client_path(client) %> || 
            <%= link_to "Deactivate", client_path(client), {data: { confirm: "Are you sure?" }, :method => :delete} %>
          <% else %>
            <%= link_to (client.is_active ? "Deactivate" : "Reactivated"), client_path(client), {data: { confirm: "Are you sure?" }, :method => :delete} %>
          <% end %>          
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>