<%= form_for @brand_ambassador, html: {role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name, {class: "control-label"} %>
    <%= f.text_field :name, {class: "form-control", placeholder: "Enter Name"} %>
  </div>

  <div class="form-group">    
    <%= f.fields_for :account do |account_fields| %>
      <%= account_fields.label :email, {class: "control-label"} %>
      <%= account_fields.email_field :email, {class: "form-control", placeholder: "Email"} %>
    <% end %>    
  </div>    

  <div class="form-group">
    <%= f.label :phone, {class: "control-label"} %>
    <%= f.text_field :phone, {class: "form-control", placeholder: "Enter Phone"} %>
  </div>

  <div class="form-group">
    <%= f.label :address, {class: "control-label"} %>
    <%= f.text_field :address, {class: "form-control", placeholder: "Enter Address"} %>
  </div>

  <div class="form-group">
    <%= f.label :grade, {class: "control-label"} %>
    <%= f.number_field :grade, {class: "form-control", min: 1, placeholder: "Enter Grade"} %>
  </div>

  <div class="form-group">
    <%= f.label :rate, {class: "control-label"} %>
    <%= f.text_field :rate, {class: "form-control", placeholder: "Enter Rate"} %>
  </div>

  <div class="form-group">
    <%= f.label :mileage, {class: "control-label"} %>
    <%= f.select :mileage, [["Yes", true], ["No", false]], {}, {class: "form-control"} %>
  </div> 

  <%= f.button "Submit", {type: "submit", class: "btn btn-default"} %>
<% end %>
