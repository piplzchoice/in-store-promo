<h1 class="page-header">Show project</h1>

<div class="row">
  <div class="col-md-3">
    <label>Client :</label>
    <p><%= @project.client.company_name %></p>
  </div>

  <div class="col-md-3">
    <label>Name :</label>
    <p><%= @project.name %></p>
  </div>

  <div class="col-md-3">
    <label>Start At :</label>
    <p><%= @project.start_at %></p>
  </div>

  <div class="col-md-3">
    <label>End At :</label>
    <p><%= @project.end_at.nil? ? "-" : @project.end_at %></p>
  </div>

  <div class="col-md-3">
    <label>Description :</label>
    <p><%= @project.descriptions %></p>
  </div>

  <div class="col-md-3">
    <% if @project.status == Project.status_active %>
      <%= link_to("Set as completed", set_as_complete_project_path(@project), {class: "btn btn-primary", role: "button", data: { confirm: "Are you sure?" }}) %>
    <% end %>
  </div>  

  <div class="col-md-3">
    <%= link_to("Export", "#", {class: "btn btn-primary", role: "button"}) %>
  </div>

</div>


<h2 class="sub-header">Services</h2>
<div id="colour-legend">
  <div class="scheduled">Scheduled</div>
  <div class="confirmed">Confirmed</div>
  <div class="rejected">Rejected</div>
  <div class="conducted">Conducted</div>
  <div class="unrespond">Unrespond</div>
  <div class="reported">Reported</div>
  <div class="paid">Paid</div>
  <div class="ba-paid">BA Paid</div>
  <div class="cancelled">Cancelled</div>
</div>

<% if @project.is_not_complete? %>
  <div class="link-new-btn"><%= link_to("New Service", new_project_service_path(project_id: @project.id), {class: "btn btn-primary", role: "button"}) %></div>
<% end %>

<div id="calendar" data-url="<%= project_services_path(project_id: @project.id) %>"></div>
