<table class="table table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each_with_index do |location, i|  %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= location.name %></td>
      <td>
        <% if location.is_active %>
          <%= link_to "Display", location_path(location) %> || 
          <%= link_to "Edit", edit_location_path(location) %> || 
          <%= link_to "Deactivate", location_path(location), {data: { confirm: "Are you sure?" }, :method => :delete} %>
        <% else %>
          <%= link_to (location.is_active ? "Deactivate" : "Reactivate"), location_path(location), {data: { confirm: "Are you sure?" }, :method => :delete} %>
        <% end %>          
      </td>
    </tr>
    <% end %>
  </tbody>
</table>