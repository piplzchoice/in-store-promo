<%= form_for @location, html: {role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, {class: "form-control", placeholder: "Name"} %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, {class: "form-control", placeholder: "Address"} %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, {class: "form-control", placeholder: "City"} %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, {class: "form-control", placeholder: "State"} %>
  </div>

  <div class="form-group">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, {class: "form-control", placeholder: "Zipcode"} %>
  </div>      

  <%= f.button "Create", {type: "submit", class: "btn btn-default"} %>
<% end %>