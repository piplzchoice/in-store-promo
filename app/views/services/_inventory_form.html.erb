<% unless @service.is_cancelled? || @service.is_rejected? %>
  <% unless @service.is_old_service %>
    <hr />
    <% if current_user.has_role?(:client) || current_user.has_role?(:customer) %>
      <%= render "show_list_products" %>
    <% else %>
      <% if @service.is_reported? %>
        <%= render "show_list_products" %>
      <% else %>
        <%= render "select_and_confirm_products" %>  
      <% end %>  
    <% end %>    

    <%= render "comment_box" %>

  <% end %>
<% end %>
