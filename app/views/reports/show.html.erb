            </td>                           
            <td id="product-two-beginning" data-id="two">
              <%= @report.product_two_beginning %>
            </td>
            <td id="product-two-end" data-id="two">
              <%= @report.product_two_end %>
            </td>
            <td id="product-two-sold" data-id="two">
              <%= @report.product_two_sold %>
            </td>
          </tr>
          <tr>
            <td>Product 3</td>
            <td id="product-three" data-id="three">
              <%= @report.product_three %>
            </td>
            <td id="product-three-price" data-id="three">
