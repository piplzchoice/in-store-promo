            </td>
            <td id="product-one-end" data-id="one">
              <%= @report.product_one_end %>
            </td>
            <td id="product-one-sold" data-id="one">
              <%= @report.product_one_sold %>
            </td>
          </tr>
          <tr>
            <td>Product 2</td>
