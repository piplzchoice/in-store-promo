<div class="row">
    <div class="col-md-12">
        <h2 class="page-header">Comments</h2>
        <%= form_tag(comment_path_action(current_user, @service), {method: :post, id: "form-comment-inventory"} ) do %>
            <div class="col-md-12">
            <div class="form-group">
                <%= text_area_tag 'comments', nil, rows: 3, cols: 10, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= hidden_field_tag "service_id", @service.id %>
                <%= submit_tag("Comment", class: "btn btn-primary") %>
            </div>
            </div>
        <% end %>
    </div>
</div>