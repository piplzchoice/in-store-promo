<h1 class="page-header">List Projects</h1>
<div class="link-new-btn"><%= link_to("New Project", new_project_path, {class: "btn btn-primary", role: "button"}) %></div>

<div class="row" style="margin-bottom: 30px;">
  <div class="col-md-3">
    <%= form_tag(projects_path, method: :get, remote: true, id: "filter-data") do %>
      <div class="form-group">
        <label class="control-label">Status</label>
        <%= select_tag("status", options_for_select(Project.options_select_status), {class: "form-control filter-params", :include_blank => true}) %>
      </div>
      <div class="form-group">
        <label class="control-label">Client Name</label>
        <%= select_tag("client_name", options_from_collection_for_select(@clients, "id", "company_name"), {class: "form-control filter-params", :include_blank => true}) %>
      </div>
      <%= hidden_field_tag(:page, 1) %>
      <%= submit_tag("Filter", class: "btn btn-default", id: "filter-submit") %>
    <% end %>
  </div>
</div>
<hr>

<div class="table-responsive">
  <%= render "table" %>
</div>
