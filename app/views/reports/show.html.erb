            <td id="product-five" data-id="five">
              <%= @report.product_five %>
            </td>
            <td id="product-five-price" data-id="five">
              <%= number_to_currency @report.product_five_price %>
            </td>              
            <td id="product-five-sample" data-id="five">
              <%= @report.product_five_sample %>
            </td>                           
            <td id="product-five-beginning" data-id="five">
              <%= @report.product_five_beginning %>
            </td>
            <td id="product-five-end" data-id="five">
              <%= @report.product_five_end %>
            </td>
            <td id="product-five-sold" data-id="five">
              <%= @report.product_five_sold %>
            </td>
          </tr>   
          <tr>
            <td>Product 6</td>
            <td id="product-six" data-id="six">
              <%= @report.product_six %>
            </td>
