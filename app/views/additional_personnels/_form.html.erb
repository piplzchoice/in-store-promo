<%= form_for [@client, @additional_personnel], html: {role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name, {class: "control-label"} %>
    <%= f.text_field :name, {class: "form-control", placeholder: "Enter Name"} %>
  </div>

  <div class="form-group">    
    <%= f.fields_for :account do |account_fields| %>
      <%= account_fields.label :email, {class: "control-label"} %>
      <%= account_fields.email_field :email, {class: "form-control", placeholder: "Email"} %>
    <% end %>    
  </div>    

  <div class="form-group">    
    <%= f.fields_for :account do |account_fields| %>
      <%= account_fields.label :password, {class: "control-label"} %>
      <%= account_fields.password_field :password, {class: "form-control", placeholder: "Enter Password"} %>
    <% end %>    
  </div>    

  <div class="form-group">    
    <%= f.fields_for :account do |account_fields| %>
      <%= account_fields.label :password_confirmation, {class: "control-label"} %>
      <%= account_fields.password_field :password_confirmation, {class: "form-control", placeholder: "Confirm Password"} %>
    <% end %>    
  </div>      

  <div class="form-group">
    <%= f.label :company, {class: "control-label"} %>
    <%= f.text_area :company, {class: "form-control", :rows => 10, :cols => 20} %>
  </div>

  <div class="form-group">
    <%= f.label "function", {class: "control-label"} %>
    <%= f.text_area :function_text, {class: "form-control", :rows => 10, :cols => 20} %>
  </div>    

  <%= f.button "Submit", {type: "submit", class: "btn btn-default"} %>
<% end %>
