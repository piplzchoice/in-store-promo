<h1 class="page-header">List Locations</h1>
<div class="link-new-btn"><%= link_to("New Location", new_location_path, {class: "btn btn-primary", role: "button"}) %></div>

<div class="row" style="margin-bottom: 30px;">
  <div class="col-md-3">
    <%= form_tag(locations_path, method: :get, remote: true, id: "filter-data") do %>
      <div class="form-group">
        <label class="control-label">Status</label>
        <%= select_tag("is_active", options_for_select([["Active", true], ["Inactive", false]]), {class: "form-control filter-params"}) %>
      </div>
      <%= hidden_field_tag(:page, 1) %>
      <%= submit_tag("Filter", class: "btn btn-default", id: "filter-submit") %>
    <% end %>
  </div>
</div>
<hr>

<div class="table-responsive">
  <%= render "table" %>
</div>