<div class="row" style="margin-bottom: 30px;">
  <div class="col-md-3">
    <%= form_tag(reports_path, method: :get, remote: true, id: "filter-data") do %>
      <div class="form-group">
        <label class="control-label">Status</label>
        <%#= select_tag("status", options_for_select(Service.options_select_status), {class: "form-control filter-params", :include_blank => true}) %>
        <% Service.options_select_status.each do |status| %>
          <div className="checkbox">
            <label>
              <%= check_box_tag("statuses[]", status[1], @status.include?(status[1].to_s), {class: "statuses"}) %>
              <%= status[0] %>
            </label>
          </div>
        <% end %>             
      </div>  
      <%= hidden_field_tag(:sort, "start_at",) %>
      <%= hidden_field_tag(:direction, "desc") %>      
      <%= hidden_field_tag(:page, 1) %>
      <%= submit_tag("Filter", class: "btn btn-default") %>               
      <%= link_to("Export CSV", "#", {id: "export-csv" ,class: "btn btn-primary", role: "button"}) %>
    <% end %>
  </div>
  <div class="link-new-btn" style="margin-top: 75px;">
    <%= link_to("In Store Marketing Services Calendar", "#", {id: "view-calendar-filter" ,class: "btn btn-primary", role: "button", data: {url: view_calendar_reports_path}}) %>
  </div>       
</div>
<hr>