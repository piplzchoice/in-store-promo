<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title" id="mySmallModalLabel">
    <%= @service.project.name %> - <%= @service.client_and_companyname %>
  </h4>
</div>
<div class="modal-body">
  <div class="row">
    <div class="col-md-9">
      <p>Schedule: <strong><%= @service.start_at.strftime('%m/%d/%Y') %>: <%= @service.time_at %></strong></p>
      <p>Assigned to: <strong><%= @service.brand_ambassador.name %></strong></p>
      <p>Jobs description: <strong><%= @service.details %></strong></p>

      <% if @service.report.nil? %>
        <%= link_to("Create Report", new_report_path(service_id: @service.id), {class: "btn btn-primary", role: "button"}) %>
      <% else %>
        <%= link_to("Show Report", show_report_report_path(@service.report), {class: "btn btn-primary", role: "button"}) %>      
        <%= link_to("Edit Report", edit_report_path(@service.report), {class: "btn btn-primary", role: "button"}) %>      
      <% end %>
    </div>

    <div class="col-md-3">
      <div class="row">
        <%= link_to("Edit", "", {class: "btn btn-primary", role: "button"}) %>
      </div>
      <br />
      <div class="row">
        <label><%= @service.project.name %></label>
        <label><%= @service.location.complete_location %></label>
      </div>
    </div>
  </div>  
</div>