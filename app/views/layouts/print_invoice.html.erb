<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "In Store Marketing" %></title>
    <style type="text/css">
      .row {
        display: inline-block;
        width: 100%;        
      }    

      table {
        border-spacing: 2px;
        border-collapse: collapse;
      }
      td,
      th {
        padding: 0;
      }

      .highlight {
        background-color: rgb(208, 208, 208);
      }

      .title-color {
        color: white;
      }

      .right-align {
        text-align: right;
      }

      .table-bordered {
        border: 1px solid black;        
      }
      .table-bordered > thead > tr > th,
      .table-bordered > tbody > tr > th,
      .table-bordered > tfoot > tr > th,
      .table-bordered > thead > tr > td,
      .table-bordered > tbody > tr > td,
      .table-bordered > tfoot > tr > td {
        border: 1px solid black;
      }
      .table-bordered > thead > tr > th,
      .table-bordered > thead > tr > td {
        border-bottom-width: 2px;
      }      

      .pad-tab {
        padding: 3px;
      }

      tr.border-inv, td.border-inv {
        border: 1px solid black;
      }

      td.border-bott {
        border-bottom: 1px solid;
      }

      td.border-bott-strong {
        border-bottom: 2px solid;
      }      
    </style>
  </head>
  <body>
      <div class="container-fluid">
        <div class="row">
          <div style="float: right; text-align: right;">
            <span style="display: block; font-weight: 500; font-size: 15px">
              <strong>Carol Wellins (dba InStore Marketing Services)</strong>
            </span>
            <span style="display: block;">206 Water Street</span>
            <span style="display: block;">Richmond CA 94801</span>
            <span style="display: block;">U.S.A </span>
          </div>
        </div>        

        <div class="row" style="margin-top: 15px;margin-bottom: 45px;">
          <div style="height: 2px; background-color: black; text-align: right;padding-right: 125px;">
            <span style="background-color: white; position: relative; top: -0.5em; font-size: 15px">
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <strong>INVOICE</strong>
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </span>
          </div>          
        </div>
        <%= yield %>
        <div class="row" style="margin-top: 40px;">
          <span style="display: block; font-weight: 500; font-size: 15px">
            <strong>Terms & Conditions</strong>
          </span><br />
          <span style="display: block;">Payable to</span>
          <span style="display: block;">Carol Wellins In Store Marketing Services</span>
          <span style="display: block;">206 Water Street</span>
          <span style="display: block;">Richmond CA 94801</span>
        </div> 
        <div class="row" style="margin-top: 200px; font-weight: 500; font-size: 15px; text-align: center"><strong>Thank you for your business</strong></div>
      </div>
  </body>
</html>