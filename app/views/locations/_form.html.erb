<%= form_for @location, html: {role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name, {class: "control-label"} %>
    <%= f.text_field :name, {class: "form-control", placeholder: "Name"} %>
  </div>

  <div class="form-group">
    <%= f.label :address, {class: "control-label"} %>
    <%= f.text_field :address, {class: "form-control", placeholder: "Address"} %>
  </div>

  <div class="form-group">
    <%= f.label :city, {class: "control-label"} %>
    <%= f.text_field :city, {class: "form-control", placeholder: "City"} %>
  </div>

  <div class="form-group">
    <%= f.label :state, {class: "control-label"} %>
    <%= f.text_field :state, {class: "form-control", placeholder: "State"} %>
  </div>

  <div class="form-group">
    <%= f.label :zipcode, {class: "control-label"} %>
    <%= f.text_field :zipcode, {class: "form-control", placeholder: "Zipcode"} %>
  </div>      

  <br /><br />
  <h2 class="page-header">Contact</h2>

  <div class="form-group">
    <%= f.label :contact, {class: "control-label"} %>
    <%= f.text_field :contact, {class: "form-control", placeholder: "Contact Name"} %>
  </div>    

  <div class="form-group">
    <%= f.label :phone, {class: "control-label"} %>
    <%= f.text_field :phone, {class: "form-control", placeholder: "Contact Phone"} %>
  </div>      

  <div class="form-group">
    <%= f.label :email, {class: "control-label"} %>
    <%= f.text_field :email, {class: "form-control", placeholder: "Contact Email"} %>
  </div>      

  <div class="form-group">
    <%= f.label :notes, {class: "control-label"} %>
    <%= f.text_area :notes, {cols: 20, rows: 10, class: "form-control", placeholder: "Notes"} %>
  </div>      

  <%= f.button "Submit", {type: "submit", class: "btn btn-default"} %>
<% end %>